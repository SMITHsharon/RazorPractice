<div class="row">
    <div class="col-md-4">
        <h2>List of Names</h2>
        @{ List<string> nameList = new List<string> { "Sean", "Heather", "Izzy", "Drew", "Shazza" }; }

        <ul>
            @foreach (var name in nameList)
            {
                <li>@name</li>
            }
        </ul>

        @{
            string userName = "shSmitty";
            string greeting = "yo";

            WriteLiteral("<div>");
            Write(greeting + ", " + userName);
            WriteLiteral("</div>");
        }

        @{ 
            DateTime today = DateTime.Now;

            WriteLiteral("<div>");
            if (today.DayOfWeek == DayOfWeek.Friday)
            {
                WriteLiteral("TGIF!");
            }
            else
            {
                WriteLiteral("Rats ... Not Friday Yet ... ");
                Write("It's only " + today.DayOfWeek);
            }
            WriteLiteral("</div>");
        }
    </div>

